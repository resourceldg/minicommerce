{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@sveltejs/adapter-vercel"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "POSTGRES_URL": "@postgres_url",
    "POSTGRES_HOST": "@postgres_host",
    "POSTGRES_DATABASE": "@postgres_database",
    "POSTGRES_USERNAME": "@postgres_username",
    "POSTGRES_PASSWORD": "@postgres_password"
  }
} 